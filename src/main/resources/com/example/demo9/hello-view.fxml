<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="900.0" prefWidth="600.0" style="-fx-background-image: url('file:///C:/Users/NAYIRA/IdeaProjects/demo9/src/main/resources/com/example/petshelter/img_1.png'); -fx-background-size: cover; -fx-background-color: rgba(0, 0, 0, 0.5);" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo9.PetPrescriptionController">

    <!-- Top-aligned label -->
    <top>
        <Label alignment="TOP_CENTER" text="Write Down A Prescription" textAlignment="CENTER" BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="65.0" />
            </font>
        </Label>
    </top>

    <!-- Center-aligned VBox for input fields -->
    <center>
        <VBox alignment="CENTER" spacing="30.0">
            <HBox alignment="CENTER" spacing="20.0">
                <!-- Pet ID Field -->
                <Label style="-fx-font-size: 36; -fx-text-fill: #000000; -fx-font-weight: bold;" text="Pet ID:              " />
                <TextField fx:id="petIdField" prefHeight="60.0" prefWidth="350.0" promptText="Enter Pet ID" style="-fx-font-size: 36;" />
            </HBox>
            <HBox alignment="CENTER" spacing="20.0">
                <!-- Prescription Field -->
                <Label style="-fx-font-size: 36; -fx-text-fill: #000000; -fx-font-weight: bold;" text="Prescription:   " />
                <TextField fx:id="prescriptionField" prefHeight="100.0" prefWidth="350.0" promptText="Enter Prescription" style="-fx-font-size: 36;">
                    <font>
                        <Font size="36.0" />
                    </font>
                </TextField>
            </HBox>
            <!-- Days Field -->
            <HBox alignment="CENTER" spacing="20.0">
                <Label style="-fx-font-size: 36; -fx-text-fill: #000000; -fx-font-weight: bold;" text="Days:               " />
                <TextField fx:id="daysField" prefHeight="60.0" prefWidth="350.0" promptText="Enter Days" style="-fx-font-size: 36;" />
            </HBox>
            <!-- Drug Field -->
            <HBox alignment="CENTER" spacing="20.0">
                <Label style="-fx-font-size: 36; -fx-text-fill: #000000; -fx-font-weight: bold;" text="Drug:              " />
                <TextField fx:id="drugField" prefHeight="60.0" prefWidth="350.0" promptText="Enter Drug" style="-fx-font-size: 36;" />
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                <Button fx:id="Back" prefHeight="86.0" prefWidth="241.0" style="-fx-font-size: 40; -fx-background-color: red; -fx-text-fill: white; -fx-border-radius: 30; -fx-background-radius: 30; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.6), 10, 0, 0, 0);" text="Back" textAlignment="CENTER" HBox.hgrow="NEVER" />
                <!-- Placeholder to push Submit button to the right -->
                <Region HBox.hgrow="ALWAYS" />
                <!-- Submit Button -->
                <Button fx:id="submitButton" prefHeight="86.0" prefWidth="241.0" style="-fx-font-size: 40; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-radius: 30; -fx-background-radius: 30; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.6), 10, 0, 0, 0);" text="Submit" textAlignment="CENTER" HBox.hgrow="NEVER" />
            </HBox>
        </VBox>
    </center>

    <!-- Padding for spacing -->
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="50.0" />
    </padding>

</BorderPane>
